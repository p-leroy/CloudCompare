name: Auto-merge upstream master daily

on:
  schedule:
    # Runs at 02:00 UTC every day
    - cron: '0 2 * * *'
  workflow_dispatch: # allows manual triggering

jobs:
  merge-upstream:
    runs-on: ubuntu-latest
    steps:
      - name: Checkout your branch
        uses: actions/checkout@v4
        with:
          ref: m3c2_evol
          token: ${{ secrets.GITHUB_TOKEN }}

      - name: Add upstream remote
        run: git remote add upstream https://github.com/CloudCompare/CloudCompare.git

      - name: Fetch upstream
        run: git fetch upstream

      - name: Merge upstream/master into branch
        run: |
          git config user.name "github-actions[bot]"
          git config user.email "github-actions[bot]@users.noreply.github.com"
          git merge upstream/master --no-edit

      - name: Push changes to your fork
        run: git push origin m3c2_evol
